{
   "name": "Daily Budget of Cibus Sodexo",
   "version": "0.0.2",
   "manifest_version" : 2,

   "description": "Reports daily balance for Cibus MySodex",
   "icons": {
      "128": "icon-128x128.png",
      "48": "icon-48x48.png",
      "16": "icon-16x16.png"
   },

   "page_action": {},

   "permissions": [ 
      "https://www.mysodexo.co.il/*",
      "tabs"
   ],
   "content_scripts": [
      {
         "matches": ["https://www.mysodexo.co.il/*"],
         "css": ["content.css", "jquery-ui.min.css"],
         "js": [
            "jquery-1.8.2.js", "jquery-ui.min.js",
            "mysodexo-planner.js"
         ],
         "run_at": "document_start"
      }
   ]
}
